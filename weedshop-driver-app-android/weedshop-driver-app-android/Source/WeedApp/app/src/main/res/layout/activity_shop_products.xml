<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/background_color"
        android:minHeight="?actionBarSize"
        app:theme="@style/ToolbarColoredBackArrow"
        app:titleTextColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Shops"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_open_cart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/cart" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#373B44"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category : "
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edibles"
            android:textColor="#2DCE9C" />

        <ImageView
            android:id="@+id/ivSearchbtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logo" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llfilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:visibility="gone">
            <!--CHANGE TO GONE-->

            <LinearLayout
                android:id="@+id/ll_filter1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/round_filter_transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="7dp"
                android:visibility="gone">
                <!--CHANGE TO GONE-->
                <TextView
                    android:id="@+id/tv_filter1"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="SATIVA"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_filter1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/dot_filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_filter2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_filter_transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="7dp"
                android:visibility="gone">
                <!--CHANGE TO GONE-->

                <TextView
                    android:id="@+id/tv_filter2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="HYBRID"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_filter2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/dot_filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_filter3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_filter_transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="7dp"
                android:visibility="gone">
                <!--CHANGE TO GONE-->

                <TextView
                    android:id="@+id/tv_filter3"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="INDICA"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_filter3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/dot_filter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_filter4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_filter_transparent"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="7dp"
                android:visibility="gone">
                <!--CHANGE TO GONE-->

                <TextView
                    android:id="@+id/tv_filter4"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="CBD"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_filter4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/dot_filter" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llfilter"
            android:background="@color/background_color"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ListView
                android:id="@+id/grid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#373B44"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">
            <!--CHANGE TO GONE-->
            <Spinner
                android:id="@+id/spn_filter_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/spinner_bg"
                android:spinnerMode="dropdown" />

            <Button
                android:id="@+id/btn_search_product"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/signin_edittext_height"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_corner_gradient"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:text="SEARCH"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
